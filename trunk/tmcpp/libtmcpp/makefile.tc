                fprstr.c \
                fprsym.c \
                fprtext.c \
                fpruchar.c \
                fpruint.c \
                fprulong.c \
                fprushrt.c \
                fprwrd.c \
                fscbool.c \
                fsccbrac.c \
                fsccons.c \
                fscdbl.c \
                fscescc.c \
                fscflt.c \
                fscint.c \
                fsclong.c \
                fscobrac.c \
                fscschar.c \
                fscspace.c \
                fscsshrt.c \
                fscstr.c \
                fscsym.c \
                fsctext.c \
